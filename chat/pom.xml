<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.1.5</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>

	<groupId>com.swapit</groupId>
	<artifactId>chat</artifactId>
	<version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>chat</name>
	<description>User microservice responsible for registration/authentication and profile update</description>
    <modules>
		<module>chat-api</module>
		<module>chat-client</module>
		<module>chat-service</module>
	</modules>

    <properties>
		<java.version>21</java.version>

		<user.version>0.0.1-SNAPSHOT</user.version>
		<commons.version>0.0.1-SNAPSHOT</commons.version>

	</properties>

	<dependencies>

		<dependency>
			<groupId>com.swapit</groupId>
			<artifactId>user-api</artifactId>
			<version>${user.version}</version>
		</dependency>

		<dependency>
			<groupId>com.swapit</groupId>
			<artifactId>commons</artifactId>
			<version>${commons.version}</version>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<image>
						<builder>paketobuildpacks/builder-jammy-base:latest</builder>
					</image>
					<excludes>
						<exclude>
							<groupId>org.projectlombok</groupId>
							<artifactId>lombok</artifactId>
						</exclude>
					</excludes>
					<classifier>exec</classifier>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.2.0</version> <!-- Ensure you are using a suitable version -->
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<mainClass>com.swapit.chat.ChatApplication</mainClass> <!-- Replace with your main class -->
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
